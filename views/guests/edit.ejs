

<%- include("../partials/header") %> 
<%- include("../partials/navbar") %> 



<main>
    <div class="row mt-5">
        <div class="col-md-6 mx-auto">
            <h1 class="display-6">Edit Details</h1>
            <form action="/guests/<%=guest._id%>?_method=PATCH" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" name="name" id="name" value=<%=guest.name%>>
                </div>
                <div class="mb-3">
                    <label for="age" class="form-label">Age</label>
                    <input class="form-control" type="text" name="age" id="age" value=<%=guest.age%>>
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Phone</label>
                        <input type="text" name="phone" id="phone" class="form-control" value=<%=guest.phone%>>
                </div>
                <div class="mb-3">
                    <label for="mail" class="form-label">E-mail</label>
                        <input type="email" name="mail" id="mail" class="form-control" value=<%=guest.mail%>>
                </div>
            
                <div class="mb-3">
                    <label for="checkout" class="form-label">Check-Out</label>
                        <input type="datetime-local" name="checkout" id="checkout" class="form-control"  >
                </div>

                <button type="submit" class="btn btn-primary btn-small">Submit</button>
            </form>

        </div>
    </div>

</main>

<%- include("../partials/footer") %> 